<p>Simple Airbnb</p>

<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>


  <div class="cards">
  <% @flats.each do |flat| %>
  <div class="card-category">

    <ul><h3><%= flat.name %></ul></h3>
    <ul><%= flat.address %></ul>
    <ul><%= flat.price_per_night%></ul>
    <ul><%= flat.number_of_guests %></ul>
  </div>

  <% end %>

  <%# <%= link_to 'More info', flat_path(flat) %>
</div>

</div>
